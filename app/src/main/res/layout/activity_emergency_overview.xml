<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Emergency">

    <TextView
        android:id="@+id/emergency_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Overview"
        android:textColor="@color/pink"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.149" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="311dp"
        android:layout_height="309dp"
        android:background="@drawable/container"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:textColor="@color/pink"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/medium"
            android:text="Name"
            android:textSize="24sp" />

        <TextView
            android:textColor="@color/pink"
            android:id="@+id/msgheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/medium"
            android:text="Message :"
            android:textSize="24sp" />

        <TextView
            android:textColor="@color/pink"
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/light"
            android:text="message"
            android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/end"
        android:layout_width="177dp"
        android:layout_height="56dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button"
        android:text="End"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OkBtn" />

    <Button
        android:id="@+id/start"
        android:layout_width="277dp"
        android:layout_height="60dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/button"
        android:text="Start Pick up"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click for location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergency_overview" />

</androidx.constraintlayout.widget.ConstraintLayout>